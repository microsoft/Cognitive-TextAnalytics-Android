<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.microsoft.cognitive.textanalytic.sample">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:launchMode="singleTop"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name="com.microsoft.cognitive.textanalytics.sample.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.microsoft.cognitive.textanalytics.sample.KeyActivity"
            android:label="@string/title_activity_key"
            android:parentActivityName="com.microsoft.cognitive.textanalytics.sample.MainActivity" />
        <activity
            android:name="com.microsoft.cognitive.textanalytics.sample.DetectedTopicActivity"
            android:label="@string/title_activity_detected_topics"
            android:parentActivityName="com.microsoft.cognitive.textanalytics.sample.MainActivity" />
    </application>

</manifest>